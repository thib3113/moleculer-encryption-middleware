{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "declarationDir": "@types",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "lib",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
